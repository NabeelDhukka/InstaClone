<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nabee.instaclone.Home.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--TOP SECTION-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topBarRelLayout">

            <include layout="@layout/layout_top_tabs"></include>

        </RelativeLayout>

        <!--Middle body section-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topBarRelLayout"
            android:id="@+id/midSection">

            <include layout="@layout/layout_center_viewpager"></include>

        </RelativeLayout>

        <!--Bottom section-->

            <include layout="@layout/layout_bottom_navbar"></include>

     </RelativeLayout>

 </android.support.design.widget.CoordinatorLayout>
